{% if enabled != 0 %}
    <h2 class="text-center">Запрос на участие в мастерской</h2>
    {% if status == 'OK' %}
    <p class="alert alert-success">Запрос на участие в мастерской отправлен...</p>
    {% endif %}
    <div class="messageAdd row">
        <form action="?" method="POST" enctype="multipart/form-data" class="col-md-6 col-md-offset-3 col-sm-12 form-horizontal">
            <input type="hidden" name="actionobject" value="project" />
            <input type="hidden" name="action" value="request" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Мастерская</label>
                        <div class="col-sm-8">
                            <select name="actionfields[project]" class="form-control">
                            {% for item in projects %}
                                <option value="{{item['id']}}" {% if (item['id'] == project) %}selected="selected"{% endif %}>{{item['title']}}</option>
                            {% endfor %}
                            </select>
                            {% if projectError != '' %}<p class="form-error">Неизвестная мастерская</p>{% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Роль в мастерской</label>
                        <div class="col-sm-8">
                            <select name="actionfields[role]" class="form-control">
                                <option value="0" {% if (projectRole == 0) %}selected="selected"{% endif %}>Наблюдатель</option>
                                <option value="1" {% if (projectRole == 1) %}selected="selected"{% endif %}>Ученик</option>
                                <option value="2" {% if (projectRole == 2) %}selected="selected"{% endif %}>Подмастерья</option>
                                <option value="3" {% if (projectRole == 3) %}selected="selected"{% endif %}>Мастер</option>
                            </select>
                            {% if projectRoleError != '' %}<p class="form-error">Неизвестная роль</p>{% endif %}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Сопроводительное сообщение мастеру</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" name="actionfields[message]">{{message}}</textarea>
                            {% if messageError != '' %}<p class="form-error">Сообщение должно содержать от 3 символов</p>{% endif %}
                        </div>
                    </div>
                    <p class="text-center"><button class="btn btn-primary" type="submit">Отправить</button></p>            
        </form>
    </div>
{% endif %}